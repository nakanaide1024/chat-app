<div class="shiro-atama">
  <div class="s-migime">
    <div class="s-migimentama">
      hogehuge
    </div>
  </div>
  <div class="s-hidarime">
    <div class="s-hidarimentama">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="shiro-karada">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "shiro-ashi"}, local: true do |f|%>
  <div class="mata-ashi">
    <%= f.text_field :content, class: 'migiashi', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit '送信', class: 'hidariashi' %>
<% end %>